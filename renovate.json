{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>mhutter/.github:renovate-config",
    ":automergePatch"
  ],
  "enabledManagers": [
    "argocd",
    "kubernetes",
    "kustomize"
  ],
  "kustomize": {
    "fileMatch": [
      "(^|/)kustomization\\.ya?ml$"
    ],
    "pinDigests": false
  },
  "argocd": {
    "fileMatch": [
      "^clusters/.+\\.ya?ml$"
    ]
  },
  "kubernetes": {
    "fileMatch": [
      "^apps/.+\\.ya?ml$"
    ]
  }
}
